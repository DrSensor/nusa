{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "strict": true,

    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noResolve": true,

    "checkJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext.Array"
    ]
  }
}
